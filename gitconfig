[alias]
    a     = add
    aa    = add --all
    b     = branch
    ba    = branch -a
    br    = branch -r
    ca    = commit --all
    ch    = !$EDITOR $(git diff --name-only) ; Edit changed files
    cm    = commit
    cma   = commit --amend
    co    = checkout
    codecommit = !"f() { profile=$1; shift; echo git clone --config 'credential.helper=!aws codecommit --profile '$profile' credential-helper $@' --config 'credential.UseHttpPath=true' $@; }; f"
    d     = diff
    dc    = diff --cached
    dl    = diff @~1
    dt    = difftool
    f     = fetch
    files = diff --name-status
    g     = !"f() { [ $# -gt 0 ] && git \"$@\" || git status --short --branch ; }; f"
    m     = merge
    mnf   = merge --no-ff
    mt    = mergetool
    prb   = pull --rebase
    r     = reset
    rb    = rebase
    root  = rev-parse --show-toplevel
    s     = status
    sa    = status --ignored ; Show all
    sh    = show
    t     = log --graph --pretty=format:'%C(yellow)%h%Creset%C(auto)%d%Creset %s %Cgreen(%cr)%Creset %C(bold blue)<%an>%Creset' --abbrev-commit --all
    tb    = log --graph --pretty=format:'%C(yellow)%h%Creset%C(auto)%d%Creset %s %Cgreen(%cr)%Creset %C(bold blue)<%an>%Creset' --abbrev-commit --first-parent
    who   = shortlog -sne
[color]
	ui = auto
[core]
    editor = vim
	excludesfile = ~/.gitignore
[diff]
    tool = vimdiff
[difftool]
    prompt = false;
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[pager]
    diff = diff-so-fancy | less --tabs=4 -RFX
    show = diff-so-fancy | less --tabs=4 -RFX
[push]
    default = current
[user]
    email = jose.carlos.padial@gmail.com
    name = Pepe Padial
[github]
    user = Skardian
[commit]
	verbose = true
[include]
    path = ~/.gitconfig.local
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[init]
	templatedir = ~/.git-templates
[fetch]
	prune = true
