[alias]
    a     = add
    aa    = add --all
    b     = branch
    ba    = branch -a
    br    = branch -r
    ca    = commit --all
    ch    = !$EDITOR $(git diff --name-only) ; Edit changed files
    cm    = commit
    cma   = commit --amend
    co    = checkout
    d     = diff
    dc    = diff --cached
    dl    = diff @~1
    dt    = difftool
    f     = fetch
    files = diff --name-status
    m     = merge
    mt    = mergetool
    r     = reset
    rb    = rebase
    root  = rev-parse --show-toplevel
    s     = status
    sh    = show
    sa    = status --ignored ; Show all
    t     = log --graph --pretty=format:'%C(yellow)%h%Creset%C(auto)%d%Creset %s %Cgreen(%cr)%Creset %C(bold blue)<%an>%Creset' --abbrev-commit --all
[color]
	ui = auto
[core]
    editor = vim
	excludesfile = ~/.gitignore
[diff]
    tool = vimdiff
[difftool]
    prompt = false;
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[pager]
    diff = diff-so-fancy | less --tabs=4 -RFX
    show = diff-so-fancy | less --tabs=4 -RFX
[push]
    default = current
[user]
    email = jose.carlos.padial@gmail.com
    name = Pepe Padial
[github]
    user = Skardian
[commit]
	verbose = true
[include]
    path = ~/.gitconfig.local
