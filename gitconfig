[alias]
    a     = add
    aa    = add --all
    b     = branch
    ba    = branch -a
    br    = branch -r
    ca    = commit --all
    ch    = !$EDITOR $(git diff --name-only)
    cm    = commit
    cma   = commit --amend
    co    = checkout
    d     = diff
    dt    = difftool
    dtp   = difftool HEAD~1
    f     = fetch
    files = diff --name-status
    m     = merge
    mt    = mergetool
    r     = reset
    rb    = rebase
    s     = status
    sa    = status --ignored
    t     = log --graph --pretty=format:'%C(yellow)%h%Creset%C(auto)%d%Creset %s %Cgreen(%cr)%Creset %C(bold blue)<%an>%Creset' --abbrev-commit --all
[color]
	ui = auto
[core]
    editor = vim
	excludesfile = ~/.gitignore
[diff]
    tool = vimdiff
[difftool]
    prompt = false;
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[push]
    default = current
[user]
    email = jose.carlos.padial@gmail.com
    name = Pepe Padial
[github]
    user = Skardian
