[alias]
    a     = add
    aa    = add --all
    b     = branch
    ba    = branch -a
    br    = branch -r
    ca    = commit --all
    cm    = commit
    cma   = commit --amend
    co    = checkout
    dt    = difftool
    f     = fetch
    files = diff --name-status
    mt    = mergetool
    pl    = pull
    ps    = push
    sa    = status --ignored
    t     = log  --graph --pretty=format:'%C(yellow)%h%Creset%C(auto)%d%Creset %s %Cblue(%an)%Creset %Cgreen(%cr)%Creset' --abbrev-commit --all
    tree  = log --graph --pretty=format:'%C(yellow)%h%Creset%C(auto)%d%Creset %s %Cblue(%an)%Creset %Cgreen(%cr)%Creset' --abbrev-commit --all
    wt    = !watch --color -t -x git log --graph --pretty=format:'%C(yellow)%h%Creset%C(red)%d%Creset %C(white dim)%s%Creset %Cblue(%an)%Creset %Cgreen(%cr)%Creset' --abbrev-commit --all
[color]
	ui = auto
[core]
    editor = vim
	excludesfile = ~/.gitignore
[diff]
    tool = vimdiff
[difftool]
    prompt = false;
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[push]
    default = current
[user]
    email = jose.carlos.padial@gmail.com
    name = Pepe Padial
[github]
    user = Skardian
