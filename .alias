# Alias
alias RM='rm -rf'
alias cp='cp -i'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias grep='grep --color=auto'
alias mv='mv -i'
alias rm='rm -i'

# ls alias
alias ls='ls -s --color=auto' #Colorize ls
alias ll='ls -lhs'      #long list
alias l='ls -1s'       #long list
alias la='ls -lAFhs'   #long list,show almost all,show type,human readable
alias lr='ls -tRFhs'   #sorted by date,recursive,show type,human readable
alias lt='ls -ltFhs'   #long list,sorted by date,show type,human readable

# Movement alias
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

