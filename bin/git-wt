#!/usr/bin/env sh

# Loop to imitate watch
while :; do
    clear;                        # Clear screen
    LINES=`tput lines`;           # Get screen size
    git log --graph --pretty=format:'%C(yellow)%h%Creset%C(auto)%d%Creset %s %Cgreen(%cr)%Creset %C(bold blue)<%an>%Creset' --abbrev-commit --all | head -n $(($LINES-1)) # Draw tree
    sleep 0.5;                    # Wait
done
